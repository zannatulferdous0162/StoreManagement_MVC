@model StoreManagement_Project.Models.StockAdjustment

@{
    ViewData["Title"] = "Delete Stock Adjustment";
}

<h1>Delete Stock Adjustment</h1>

<h3>Are you sure you want to delete this adjustment?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Stock.Item.ItemName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Stock.Item.ItemName)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AdjustedQuantity)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AdjustedQuantity)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AdjustmentType)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AdjustmentType)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AdjustmentReason)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AdjustmentReason)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Requester)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Requester)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AdjustmentDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AdjustmentDate)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ApprovalStatus)
        </dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.ApprovalStatus == ApprovalStatus.Approved ? "bg-success" :
                              Model.ApprovalStatus == ApprovalStatus.Rejected ? "bg-danger" : "bg-warning")">
                @Html.DisplayFor(model => model.ApprovalStatus)
            </span>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StockAdjustmentId" />
        <div class="form-group mt-4">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </form>
</div>