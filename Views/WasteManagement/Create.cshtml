@model StoreManagement_Project.Models.WasteManagement

@{
    ViewData["Title"] = "Record Waste";
}

<h1>Record Waste</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="StockId" class="control-label">Select Item</label>
                <select asp-for="StockId" class="form-control" asp-items="ViewBag.Stocks">
                    <option value="">-- Select Item --</option>
                </select>
                <span asp-validation-for="StockId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WastedQuantity" class="control-label"></label>
                <input asp-for="WastedQuantity" class="form-control" />
                <span asp-validation-for="WastedQuantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WasteReason" class="control-label"></label>
                <textarea asp-for="WasteReason" class="form-control" rows="3"></textarea>
                <span asp-validation-for="WasteReason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Record Waste" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}