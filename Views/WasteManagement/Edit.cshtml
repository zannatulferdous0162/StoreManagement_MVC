@model StoreManagement_Project.Models.WasteManagement

@{
    ViewData["Title"] = "Edit Waste Record";
}

<h1>Edit Waste Record</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="WasteManagementId" />
            <input type="hidden" asp-for="WasteDate" />

            <div class="form-group mb-3">
                <label class="control-label">Item</label>
                <input class="form-control" value="@Model.Stock?.Item?.ItemName" readonly />
                <input type="hidden" asp-for="StockId" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="WastedQuantity" class="control-label"></label>
                <input asp-for="WastedQuantity" class="form-control" />
                <span asp-validation-for="WastedQuantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WasteReason" class="control-label"></label>
                <textarea asp-for="WasteReason" class="form-control" rows="3"></textarea>
                <span asp-validation-for="WasteReason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}