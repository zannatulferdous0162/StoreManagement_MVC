@model StoreManagement_Project.Models.WasteManagement

@{
    ViewData["Title"] = "Delete Waste Record";
}

<h1>Delete Waste Record</h1>

<h3>Are you sure you want to delete this record?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Item Name:</dt>
        <dd class="col-sm-9">@Model.Stock?.Item?.ItemName</dd>

        <dt class="col-sm-3">Wasted Quantity:</dt>
        <dd class="col-sm-9">@Model.WastedQuantity</dd>

        <dt class="col-sm-3">Reason:</dt>
        <dd class="col-sm-9">@Model.WasteReason</dd>

        <dt class="col-sm-3">Date:</dt>
        <dd class="col-sm-9">@Model.WasteDate.ToString("dd-MMM-yyyy")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="WasteManagementId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>