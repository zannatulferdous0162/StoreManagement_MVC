@model IEnumerable<StoreManagement_Project.Models.WasteManagement>

@{
    ViewData["Title"] = "Waste Management";
}

<h1>Waste Management</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Item Name</th>
            <th>Wasted Quantity</th>
            <th>Reason</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Stock?.Item?.ItemName</td>
                <td>@item.WastedQuantity</td>
                <td>@item.WasteReason</td>
                <td>@item.WasteDate.ToString("dd-MMM-yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.WasteManagementId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.WasteManagementId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.WasteManagementId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-success">Record New Waste</a>
</div>